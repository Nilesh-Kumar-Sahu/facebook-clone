<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <%= render 'friend_buttons', user: @user%>

      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <% if @friends.any? %>
      <div class="user_avatars">
        <% @friends.take(10).each do |user| %>
          <%= link_to gravatar_for(user, size: 80), user %>
        <% end %>
      </div>
    <% end %>
  </aside>

  <div class="col-md-8">
    <% if @user.posts.any? %>
      <h3>Posts (<%= @user.posts.count %>)</h3>
      <ol class="posts">
        <%= render @posts %>
      </ol>
    <% end %>
  </div>
</div>