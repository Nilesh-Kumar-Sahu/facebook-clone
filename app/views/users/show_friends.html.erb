<% provide(:title, @title) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "View my profile", @user %></span>
      <span><b>Posts:</b> <%= @user.posts.count %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @friends.any? %>
        <div class="user_avatars">
          <% @friends.take(10).each do |user| %>
            <%= link_to gravatar_for(user, size: 80), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>

  <div class="col-md-8">
    <h3>Your friends</h3>
    <% if @friends.any? %>
      <ul class="users follow">
        <% @friends.each do |user| %>
          <li>
            <%= gravatar_for user, size: 90 %>
            <%= link_to user.name, user %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>
